<% if user_signed_in? %>
  <li><span><i class="icon-bell"></i></span></li>
  <li>
    <ul class="dropdown menu dropdown_profile" data-dropdown-menu data-vertical-class="slide_and_fade" data-alignment="right">
      <% if user_signed_in? %>
        <li>
          <a><%= current_user.name %></a>
          <ul class="menu">
            <li><%= link_to 'Settings', dashboard_settings_path %></li>
            <li><%= link_to 'Help', dashboard_tutorials_path %></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
           </ul>
         </li>
      <% end %>
    </ul>
  </li>
  <li><%= image_tag(current_user.avatar_url(:thumb).to_s, size: '50x50') %></li>
<% else %>
  <li><%= link_to 'Log in', new_user_session_path, class: "nav_link" %></li>
  <li><%= link_to 'Sign up', new_user_registration_path, class: "nav_link" %></li>
<% end %>

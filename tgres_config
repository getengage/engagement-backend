[[ds]]
regexp = "foo"
step = "10s"
heartbeat = "2h"
# rra is "[Average|Min|Max|last:]ts:ts[:xff]"
# function is not case-sensitive, default is "wmean".
rras = ["10s:6h", "1m:10d", "10m:93d", "1d:5y:1"]

[[ds]]
regexp = ".*"
step = "60s"
heartbeat = "2h"
rras = ["WMEAN:60s:6h", "WMEAN:1m:10d", "WMEAN:10m:93d", "WMEAN:1d:5y:1"]
